{
    "compilerOptions": {
      "target": "ES2019",
      "module": "commonjs",
      "strict": true,
      "alwaysStrict": true,
      "baseUrl": "./",
      "outDir": "./dist",
      "rootDir": "./src",
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": [
        "node",
        "express"
      ],
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true
    }
}
  